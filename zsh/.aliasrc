#!/bin/zsh

alias -- -="cd -"
alias ...="cd ../.."
alias ..="cd .."
alias ~="cd ~"

alias brewclean="brew cleanup --prune=all"
alias h="hexyl"
alias icat="kitten icat"
alias l="eza -alh --icons --group-directories-first"
alias ll="eza -lh --icons --group-directories-first"
alias m="neomutt"
alias n="fastfetch"
alias s="kitten ssh"
alias v="nvim"

alias fdown="ffsend download"
alias fh="ffsend history"
alias frm="ffsend delete"
alias fup="ffsend upload -c -P"

alias ga="git add"
alias gd="git diff"
alias gds="git diff --staged"
alias gl="git logs"
alias gla="git last"
alias gp="git push"
alias gr="git restore"
alias grs="git restore --staged"
alias gs="git status"
alias gsh="git show"
alias gv="git vcommit"
